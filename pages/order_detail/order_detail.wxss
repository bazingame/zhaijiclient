/* pages/order_detail/order_detail.wxss */
page{
  font-family: '楷体';
  background-color:#eee;
  color:#666;
}
.order{
  box-sizing: border-box;
  padding: 30rpx 60rpx; 
  height: 450px;
  border-radius: 5px;
  background-color: #fff;
  width: 95%;
  margin: 10px auto 0px;
  line-height: 40px;
}
.order>image{
  margin-top: 15px;
  height: 150rpx;
  width: 150rpx;
  float: left;
}
.time,.kuaidi{
  margin-top: 15px;
  margin-left:20rpx;
}
.time,.price{
  font-size: 16px;
}
.order>view:nth-child(2),.order>view:nth-child(3){
  float:left;
}
.price,.flag{
  margin-top: 15px;
  font-size: 16px;
}
.order>view:nth-child(3){
  float: right;
  text-align: right;
}
.bar{
  clear: both;
  height: 1px;
  background-color: #000;
  width: 100%;
  margin: 90px auto 0px;
}
.me{
  margin-top: 20px;
}
.star{
  text-align: center;
  width: 400rpx;
  margin:30px auto;
}
.star>image{
  width: 40px;
  height: 40px;
}
.personalInformation{
  height: 80px;
  margin-bottom: 20px;
}
.personalInformation>image{
  float: left;
  width:80px;
  height:80px;
  border-radius:0px;
}
.id,.sendTime{
  width: 50%;
  float: left;
  margin-left: 30px;
}
button{
  z-index:999;
  right: 5px;
  background-color:#0097fe;
  margin: 20px auto;
  width: 80%;
  color:#fff;
}