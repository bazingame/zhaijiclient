/* pages/me/me.wxss */
page{
  font-family: '楷体';
  color:#888;
  background-color:#eee;
}
.top{
  padding-left: 20px;
  font-family: '楷体';
  color:#fff;
  height: 40px;
  font-size: 50rpx;
  line-height: 30px;
  background-color: #0097fe;
}
.me{
  padding-top: 20px;
  border-radius: 10px;
  margin-top: 10px;
  box-sizing: border-box;
  background-color: #fff;
  width: 90%;
  padding-left: 10%;
  margin-left: 5%;
  padding-bottom: 20px;
}
.personalInformation{
  height: 80px;
  margin-bottom: 20px;
}
.personalInformation>image{
  float: left;
  width:80px;
  height: 80px;
  border-radius:50%;
}
.id,.wx_id{
  margin:5px;
  width: 50%;
  float: left;
  margin-left: 50px;
}
.block{
  padding: 10px 0px;
  margin-top:20px;
  height: 20px;
  clear: both;
}
.block>image{
  height: 20px;
  width: 20px;
  float: left;
}
.block>view{
  float: left;
  margin-left:30px;
}
.block>view:nth-child(3){

  margin-left:0px;
  margin-right: 30px;
  float:right;
}
button{
  z-index:999;
  right: 5px;
  background-color:#0097fe;
  margin: 20px auto;
  width: 80%;
  color:#fff;
}