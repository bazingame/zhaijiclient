/* 未选中 */
checkbox .wx-checkbox-input{
  border-radius: 50%;/* 圆角 */
  height: 30rpx;
  width: 30rpx;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
    border-radius: 50%;
    line-height: 30rpx;
    text-align: center;
    font-size: 50rpx; /* 对勾大小 28rpx */
    color: green; /* 对勾颜色 白色 */
    background: transparent;
    border-color: green;
}

