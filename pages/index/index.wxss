page{
  margin: 0;
  background-color: #f4f4f2;
  font-family: "宋体";
}

.top{
  box-sizing:border-box;
  width: 100%;
  height:300rpx;
  font-size:60rpx;
  background-color: #1aaaff;
  color:#fff;
  line-height: 250rpx;
  text-align: center;
  
}
.login{
  border-radius:5px;
  height: 100px;
  padding-top: 30px;
  padding-bottom: 67px;
  padding-right: 20px;
  padding-left: 20px;
  width:80%;
  margin:10px auto;
  background-color: #fff;
}
.phone{
  margin-top: 0px;
}
.login input{
  margin-top:27px;
  font-family: "宋体";
  border-bottom:1px solid #666;
  padding: 0px 0px 10px 10px;
}
.psw{
  position: relative;
}
#captcha{
  margin: 0;
  top: -7px;
  border-radius: 15px;
  position: absolute;
  width: 250rpx;
  font-size: 28rpx;
}
button{
  z-index:999;
  right: 5px;
  background-color:#1aaaff;
  margin: 20px auto;
  width: 80%;
  color:#fff;
}